<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.charlymech.anyteeth.controller.NewPasswordController">
   <children>
      <Label fx:id="newPasswordTitle" layoutX="25.0" layoutY="50.0" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #358F80; -fx-padding: 0 10;" textFill="#e7ecef">
         <opaqueInsets>
            <Insets left="10.0" />
         </opaqueInsets>
         <font>
            <Font name="Verdana Bold" size="20.0" />
         </font>
      </Label>
      <PasswordField fx:id="password1PasswordField" layoutX="50.0" layoutY="125.0" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #358F80;">
         <font>
            <Font name="Verdana" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
      <TextField fx:id="password1TextField" layoutX="50.0" layoutY="125.0" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #358F80;" visible="false">
         <font>
            <Font name="Verdana" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <PasswordField fx:id="password2PasswordField" layoutX="50.0" layoutY="180.0" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #358F80;">
         <font>
            <Font name="Verdana" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
      <TextField fx:id="password2TextField" layoutX="50.0" layoutY="180.0" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #358F80;" visible="false">
         <font>
            <Font name="Verdana" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <CheckBox fx:id="showBothPasswordsCheckBox" layoutX="200.0" layoutY="225.0" mnemonicParsing="false" onAction="#showBothPasswords" textFill="#274c77">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </CheckBox>
      <Button fx:id="setNewPasswordBtn" layoutX="100.0" layoutY="275.0" mnemonicParsing="false" onAction="#setNewPassword" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #6096BA;" textFill="#e7ecef">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Verdana Bold" size="20.0" />
         </font>
      </Button>
      <Label fx:id="passwordLabel1" layoutX="50.0" layoutY="109.0" prefWidth="300.0" textFill="#274c77" />
      <Label fx:id="passwordLabel2" layoutX="50.0" layoutY="165.0" prefWidth="300.0" textFill="#274c77" />
   </children>
</AnchorPane>
